{% extends '::base.html.twig' %}

{% block title %}{{ "Post edit"|trans }} {{ entity.title }}{% endblock %}

{% block javascripts %}
    {% javascripts '@keltanasPageBundle/Resources/public/js/jquery.preview.js' filter='?yui_js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body -%}
    <h1>{{ block('title') }}</h1>

    <form action="{{ path('post_update', { 'id': entity.id }) }}" method="post"
          novalidate="novalidate" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}

        <hr>
        <button class="btn btn-sm btn-success" type="submit">
            {{ "Save"|trans }}
        </button>
        <button class="btn btn-sm btn-info btn-preview" type="button" data-url="{{ path('post_preview') }}">
            {{ "Preview"|trans }}
        </button>
        <a href="{{ path('keltanas_page_homepage') }}" class="btn btn-default btn-sm">
            {{ "Back to homepage"|trans }}
        </a>
        <a href="{{ path('post_delete', { 'id': entity.id }) }}" class="btn btn-sm btn-danger">
            {{ "Delete"|trans }}
        </a>
    </form>

    {% include('keltanasPageBundle:Post:_modal.html.twig') %}

{% endblock %}
