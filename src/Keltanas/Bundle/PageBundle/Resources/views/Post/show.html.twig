{% extends '::base.html.twig' %}

{% block title -%}{{ entity.title }}{% endblock %}

{% block body -%}

    {{ entity.contentHtml|raw }}

    <div class="pull-left"><small>{{ "Tags"|trans }}: {{ entity.tags }}</small></div>
    <div class="text-right"><small>{{ "Created at"|trans }}: {{ entity.createdAt|date("d.m.Y H:i") }}</small></div>

    <hr>

    <a href="{{ path('keltanas_page_homepage') }}" class="btn btn-small">
        {{ "Back to homepage"|trans }}
    </a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('post_edit', { 'id': entity.id }) }}" class="btn btn-small">
        {{ "Edit"|trans }}
    </a>
    <a href="{{ path('post_delete', { 'id': entity.id }) }}" class="btn btn-small">
        {{ "Delete"|trans }}
    </a>
    {% endif %}
{% endblock %}
